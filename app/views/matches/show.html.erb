<% provide(:title, "Match Event") %>

<div class="row">
  <div class="span6 offset1">

  	<div class="row">
  		<div class="span2">
    		<strong><%= I18n.t(:jour, scope: 'custom.form') %></strong>
    	</div>
    	<div class="span4">
    		<%= @match.jour.strftime('%d-%m-%Y') %>
    	</div>
    </div>
    <br />

  	<div class="row">
  		<div class="span2">
    		<strong><%= I18n.t(:start_time, scope: 'custom.form') %></strong>
    	</div>
    	<div class="span4">
    		<%= @match.start %>
    	</div>
    </div>
    <br />

  	<div class="row">
  		<div class="span2">
    		<strong><%= I18n.t(:end_time, scope: 'custom.form') %></strong>
    	</div>
    	<div class="span4">
    		<%= "#{match_end(@match)} (#{I18n.t(:duration, scope: 'custom.form')} #{@match.duration} minutes)" %>
    	</div>
    </div>
    <br />

  	<div class="row">
  		<div class="span2">
    		<strong>Field</strong>
    	</div>
    	<div class="span4">
    		<%= link_to @match.field.name, field_path(@match.field), "data-no-turbolink" => true %>
    	</div>
    </div>
    <br />
    <br />

    <%= gmaps({
      "map_options" => { "auto_zoom" => false, "zoom" => 15 },
      "markers"     => { "data" => @match.field.to_gmaps4rails }
    }) %>

  </div>
</div>
