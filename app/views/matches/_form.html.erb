<div class="row">
  <div class="span9 offset2">
    <%= form_for(@match) do |f| %>

      <!-- match_error_messages! -->
      <%= render partial: 'layouts/errors', locals: { object: @match } %>

      <div class="row match">
        <div class="span2 field">
          <%= f.label :jour %><br /><br />
          <%= f.text_field :jour, class: "input-append date datepicker", value: Date.today.strftime('%d-%m-%Y') %>
        </div>
        <div class="span1 field">
          <%= f.label :start_str, "Début (hh:mm)" %><br />
          <%= f.text_field :start_str, class: "time", value: Time.now.strftime('%H:%M') %>
        </div>
        <div class="span1 field">
          <%= f.label :duration, "Durée (min)" %><br />
          <%= f.text_field :duration, class: "time", value: 1.hour/60 %>
        </div>
        <div class="span5 field">
          <%= f.label :field_id %><br /><br />
          <%= f.select :field_id, fields_names %>
        </div>

          <%= f.hidden_field :start, value: 100.years.ago %>
          <%= f.hidden_field :utc_offset, value: DateTime.now.formatted_offset %>

      </div>
      <div class="row">
        <div class="span2 offset3 actions">
          <br />
          <%= f.submit "Organiser", class: "btn btn-large btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>