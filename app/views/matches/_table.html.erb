<table class="table table-striped">
  <thead>
    <tr>
      <th>NÂ°</th>
      <th></th>
      <th><%= I18n.t(:jour, scope: 'custom.form') %></th>
      <th><%= I18n.t(:start, scope: 'custom.form') %></th>
      <th><%= I18n.t(:end, scope: 'custom.form') %></th>
      <th>Field</th>
      <th>Sportizers</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="match"><p>
    <% @matches.each do |match| %>
        <tr>
          <td><%= link_to match.id, match_path(match), "data-no-turbolink" => true %></td>
          <td></td>
          <td><%= match.jour.strftime("%d/%m/%y") %></td>
          <td><%= match.start %></td>
          <td><%= match_end(match) %></td>
          <td><%= match.field.name %></td>
          <td><%= sportizers_name(match) %></td>

          <% play_match_button = build_play_match_button(match) %>
          <%= form_tag match_path(match), method: play_match_button[:action] do %>
            <!-- < %= hidden_field_tag :from_page, "index" % > -->
            <%= hidden_field_tag :participate, play_match_button[:participate] %>
            <td>
              <%= submit_tag play_match_button[:text], disabled: play_match_button[:disabled], class: "btn btn-small" %>
            </td>
          <% end %>
        </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= link_to I18n.t(:new, scope: 'custom.noun'), new_match_path, class: "btn btn-small" %></td>
    </tr>
  </tbody>
</table>
