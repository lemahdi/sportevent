<div id="SportEverywhereCarousel" class="carousel slide" data-ride="carousel">
  
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#SportEverywhereCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#SportEverywhereCarousel" data-slide-to="1"></li>
    <li data-target="#SportEverywhereCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <div class="item active">
      <%= image_tag "fencing-6vs1-5122x2200.jpg", alt: "photo1" %>
      <div class="carousel-caption">
        <div class="row">
          <div class="col-md-7"></div>
          <div class="col-md-4">
            <div class="text-justify">
              <h1><%= I18n.t(:photo1, scope: 'custom.view.home.carousel') %></h1>
              <br /><br />
            </div>
          </div>
          <div class="col-md-1"></div>
        </div>
      </div>
    </div>

    <div class="item">
      <%= image_tag "football-1-5122x2200.jpg", alt: "photo2" %>
      <div class="carousel-caption">
        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-8">
            <div class="text-justify">
              <h1><%= I18n.t(:photo2, scope: 'custom.view.home.carousel') %></h1>
            </div>
          </div>
          <div class="col-md-2"></div>
        </div>
      </div>
    </div>

    <div class="item">
      <%= image_tag "kayak-1-5122x2200.jpg", alt: "photo3" %>
      <div class="carousel-caption">
        <div class="row">
          <div class="col-md-7"></div>
          <div class="col-md-5">
            <div class="text-justify">
              <h1><%= I18n.t(:photo3, scope: 'custom.view.home.carousel') %></h1>
              <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#SportEverywhereCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#SportEverywhereCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>

</div>