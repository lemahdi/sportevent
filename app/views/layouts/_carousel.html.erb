<div id="SportEverywhereCarousel" class="carousel slide" data-ride="carousel">
  
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#SportEverywhereCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#SportEverywhereCarousel" data-slide-to="1"></li>
    <li data-target="#SportEverywhereCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <div class="item active">
      <%= image_tag "fencing-6vs1-5122x1900.jpg", alt: "fencing-6vs1", class: "img-responsive" %>
      <div class="carousel-caption">
      	<h1><%= I18n.t(:title, scope: 'custom.view.carousel.item1') %></h1>
        <h3><%= I18n.t(:text, scope: 'custom.view.carousel.item1') %></h3>
      </div>
    </div>

    <div class="item">
      <%= image_tag "football-1.jpg", alt: "football-1", class: "img-responsive" %>
      <div class="carousel-caption">
      	<h1><%= I18n.t(:title, scope: 'custom.view.carousel.item2') %></h1>
        <h3><%= I18n.t(:text, scope: 'custom.view.carousel.item2') %></h3>
      </div>
    </div>

    <div class="item">
      <%= image_tag "kayak-1.jpg", alt: "kayak-1", class: "img-responsive" %>
      <div class="carousel-caption">
      	<h1><%= I18n.t(:title, scope: 'custom.view.carousel.item3') %></h1>
        <h3><%= I18n.t(:text, scope: 'custom.view.carousel.item3') %></h3>
      </div>
    </div>

  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#SportEverywhereCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#SportEverywhereCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>

</div>