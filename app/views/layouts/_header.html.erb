<header>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#sport-ew-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Sport.EW", root_path, id: "logo", class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="sport-ew-navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li><%= link_to "Sportizers", users_path %></li>
          <% end %>
          <% if signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Fields <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to I18n.t(:all_fields, scope: 'custom.header'), fields_path, "data-no-turbolink" => true %></li>
                <li><%= link_to I18n.t(:new_field, scope: 'custom.header'), new_field_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Matchs <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to I18n.t(:all_matches, scope: 'custom.header'), matches_path %></li>
                <li><%= link_to I18n.t(:new_match, scope: 'custom.header'), new_match_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= I18n.t(:my_account, scope: 'custom.header') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to I18n.t(:profile, scope: 'custom.header'), current_user %></li>
                <li><%= link_to I18n.t(:management, scope: 'custom.header'), new_user_group_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to I18n.t(:logout, scope: 'custom.noun'), destroy_user_session_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Fields", fields_path, "data-no-turbolink" => true %></li>
            <li><%= link_to "Matchs", matches_path %></li>
            <li><%= link_to I18n.t(:sign, scope: 'custom.verb'), new_user_session_path %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>
</header>
