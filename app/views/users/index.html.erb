<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% is_current_admin = current_user.admin? %>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.nom %></td>
      <td><%= user.prenom %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td>
        <% if is_current_admin && !current_user?(user) %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
