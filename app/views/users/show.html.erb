<% provide(:title, "#{@user.nom} #{@user.prenom}") %>

<div class="divider15"></div>

<div class="row">
	<div class="col-xs-2">
		<section>
			<%= gravatar_for @user %>
		</section>
	</div>

	<div class="col-xs-4">
	  <aside>
	    <section class="pull-left">
				<h1>
				  <%= @user.nom %>
				  <%= @user.prenom %>
				</h1>
				<%= @user.email if current_user?(@user) %>
	    </section>
	  </aside>
	</div>
</div>
