<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <!-- <%= user_error_messages! %> -->
      <%= render "users/errors" %>

      <div class="field">
        <br />
        <%= f.label :nom %>
        <%= f.text_field :nom %>
      </div>
      <div class="field">
        <br />
        <%= f.label :prenom %>
        <%= f.text_field :prenom %>
      </div>
      <div class="field">
        <br />
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <br />
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <br />
        <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="actions">
        <br />
        <% if from == "new" %>
          <%= f.submit "S'inscrire", class: "btn btn-large btn-primary" %>
        <% elsif from == "edit" %>
          <%= f.submit "Changer", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
      
    <% end %>

    <% if from == "new" %>
      <p>Déjà inscrit(e) ? <%= link_to "Identifiez-vous.", signin_path %></p>
    <% end %>

  </div>
</div>