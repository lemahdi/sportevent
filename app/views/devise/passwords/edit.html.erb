<% provide(:title, I18n.t(:reset_pwd, scope: 'custom.view.title')) %>

<h1><%= I18n.t(:password, scope: 'custom.form') %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    
  		<!-- <%= devise_error_messages! %> -->
      <%= render "devise/shared/errors" %>

      <%= f.hidden_field :reset_password_token %>

      <div class="field">
      	<br />
        <%= f.label :password, I18n.t(:new_pwd, scope: 'custom.form') %>
        <%= f.password_field :password, autofocus: true %>
      </div>
      <div class="field">
      	<br />
        <%= f.label :password_confirmation, I18n.t(:new_pwd_confirm, scope: 'custom.form') %>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="actions">
      	<br />
      	<div class="span2">
        	<%= f.submit I18n.t(:change, scope: 'custom.verb'), class: "btn btn-large btn-primary" %>
      	</div>
      	<div class="span3">
      		<%= render "devise/shared/links" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>

