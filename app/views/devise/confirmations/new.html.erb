<% provide(:title, I18n.t(:new_confirm, scope: 'custom.view.title')) %>

<h1><%= I18n.t(:confirm, scope: 'custom.verb') %></h1>

<div class="row">
  <div class="col-sm-6 col-md-6 col-lg-offset-3">
    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    
  		<!-- <%= devise_error_messages! %> -->
      <%= render "devise/shared/errors" %>

      <div class="field">
      	<br />
        <%= f.label :email %>
        <i>(<%= I18n.t(:send_confirm, scope: 'custom.view.helper') %>)</i>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="actions">
      	<br />
      	<div class="col-sm-2 col-md-2">
        	<%= f.submit I18n.t(:validate, scope: 'custom.verb'), class: "btn btn-large btn-primary" %>
      	</div>
      	<div class="col-sm-3 col-md-3">
      		<%= render "devise/shared/links" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>

