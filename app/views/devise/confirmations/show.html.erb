<h2>Confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirm_path, :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :nom %><br />
  <%= f.text_field :nom, :autofocus => true %></div>

  <div><%= f.label :prenom %><br />
  <%= f.text_field :prenom %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.hidden_field :confirmation_token %></div>

  <div><%= f.submit "Confirm" %></div>
<% end %>

<%= render "devise/shared/links" %>
