<% provide(:title, I18n.t(:unlock, scope: 'custom.noun')) %>

<h1><%= I18n.t(:locked_account, scope: 'custom.view.title') %></h1>

<div class="row">
  <div class="col-sm-6 col-md-6 col-lg-offset-3">
    <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>

  		<!-- <%= devise_error_messages! %> -->
  		<%= render "devise/shared/errors" %>

      <div class="field">
      	<br />
        <%= f.label :email %>
        <i>(<%= I18n.t(:unlock_account, scope: 'custom.view.helper') %>)</i>
        <%= f.email_field :email, :autofocus => true %>
      </div>

      <div class="actions">
      	<br />
      	<div class="col-sm-2 col-md-2">
      		<%= f.submit I18n.t(:unlock, scope: 'custom.verb'), class: "btn btn-lg btn-primary" %>
      	</div>
      	<div class="col-sm-3 col-md-3">
      		<%= render "devise/shared/links" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>
