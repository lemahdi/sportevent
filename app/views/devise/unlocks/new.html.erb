<% provide(:title, 'Déblocage') %>

<h1>Compte bloqué</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>

  		<!-- <%= devise_error_messages! %> -->
  		<%= render "devise/shared/errors" %>

      <div class="field">
      	<br />
        <%= f.label :email %>
        <i>(débloquer mon compte)</i>
        <%= f.email_field :email, :autofocus => true %>
      </div>

      <div class="actions">
      	<br />
      	<div class="span2">
      		<%= f.submit "Débloquer", class: "btn btn-large btn-primary" %>
      	</div>
      	<div class="span3">
      		<%= render "devise/shared/links" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>
