<!-- <%= devise_error_messages! %> -->
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <strong><%= pluralize(@user.errors.count, "erreur") %> :</strong>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>