<% provide(:title, 'Inscription') %>

<h1>S'inscrire</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  		<!-- <%= devise_error_messages! %> -->
  		<%= render "devise/shared/errors" %>

      <div class="field">
      	<br />
        <%= f.label :email %>
        <i>seul votre adresse email est nÃ©cessaire pour le moment</i>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="actions">
      	<br />
      	<div class="span2">
        	<%= f.submit "S'inscrire", class: "btn btn-large btn-primary" %>
      	</div>
      	<div class="span3">
      		<%= render "devise/shared/links" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>

