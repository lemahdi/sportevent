<% provide(:title, I18n.t(:signin, scope: 'custom.noun')) %>

<div class="signpage img-responsive">

  <div class="container">

    <hr class="divider60">

    <div class="row form-horizontal">

      <div class="col-sm-6 col-md-6">
      </div>

      <div class="col-sm-4 col-md-4 col-lg-offset-1">

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      		<!-- <%= devise_error_messages! %> -->
      		<%= render "devise/shared/errors" %>

          <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email" %>

          <div class="row">
            <div class="col-sm-8 col-md-8">
              <%= f.password_field :password, class: "form-control", placeholder: I18n.t(:password, scope: 'custom.form') %>
            </div>
            <div class="col-sm-4 col-md-4">
              <%= f.submit I18n.t(:signin, scope: 'custom.verb'), class: "btn btn-primary" %>
            </div>
          </div>

    		  <% if devise_mapping.rememberable? -%>
            <div class="row">
              <div class="col-sm-1 col-md-1">
      	    	  <%= f.check_box :remember_me %>
              </div>
              <div class="col-sm-5 col-md-5 grayme">
      	    	  <%= f.label :remember_me, I18n.t(:remember_me, scope: 'custom.view.devise') %>
              </div>
              <div class="col-sm-6 col-md-6 rightme">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
                  <%= link_to I18n.t(:forgot_pwd, scope: 'custom.view.devise'), new_password_path(resource_name) %><br />
                <% end -%>
              </div>
            </div>
    		  <% end %>

        <% end %>

        <hr class="divider20">

        <div class="center">
          <h4>
            <%= I18n.t(:new_to_spintcy, scope: 'custom.view.devise') %>
            <div class="grayme"><%= I18n.t(:subscribe, scope: 'custom.verb') %>!</div>
          </h4>
        </div>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

          <!-- <%= devise_error_messages! %> -->
          <%= render "devise/shared/errors" %>

          <div class="row">
            <div class="col-sm-8 col-md-8">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="col-sm-4 col-md-4">
              <%= f.submit I18n.t(:signup, scope: 'custom.verb'), class: "btn btn-primary" %>
            </div>
          </div>
          
        <% end %>

      </div>
    </div>

  </div>

</div>

