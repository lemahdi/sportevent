<% provide(:title, I18n.t(:signin, scope: 'custom.noun')) %>

<h1><%= I18n.t(:signin, scope: 'custom.verb') %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  		<!-- <%= devise_error_messages! %> -->
  		<%= render "devise/shared/errors" %>

      <div class="field">
      	<br />
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %>
      </div>
      <div class="field">
      	<br />
        <%= f.label :password, I18n.t(:password, scope: 'custom.form') %>
        <%= f.password_field :password %>
      </div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="field">
          <br />
		    	<%= f.check_box :remember_me %>
		    	<%= f.label :remember_me, I18n.t(:remember_me, scope: 'custom.view.devise') %>
		    </div>
		  <% end -%>

      <div class="actions">
      	<br />
      	<div class="span2">
      		<%= f.submit I18n.t(:signin, scope: 'custom.verb'), class: "btn btn-large btn-primary" %>
      	</div>
      	<div class="span3">
      		<%= render "devise/shared/links" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>
