<% provide(:title, 'Identification') %>

<h1>S'identifier</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  		<!-- <%= devise_error_messages! %> -->
  		<%= render "devise/shared/errors" %>

      <div class="field">
      	<br />
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %>
      </div>
      <div class="field">
      	<br />
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password %>
      </div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="field">
		    	<%= f.check_box :remember_me %>
		    	<%= f.label :remember_me, "Rester connectÃ©" %>
		    </div>
		  <% end -%>

      <div class="actions">
      	<br />
      	<div class="span2">
      		<%= f.submit "S'identifier", class: "btn btn-large btn-primary" %>
      	</div>
      	<div class="span3">
      		<%= render "devise/shared/links" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>
