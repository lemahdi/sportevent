<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@field) do |f| %>

      <!-- field_error_messages! -->
      <%= render partial: 'layouts/errors', locals: { object: @field } %>

      <br />
      <%= f.label :latitude %>
      <%= f.text_field :latitude, class: "form-control" %>
      
      <br />
      <%= f.label :longitude %>
      <%= f.text_field :longitude, class: "form-control" %>
      
      <br />
      <%= f.label :name, I18n.t(:give_name, scope: 'custom.view.field') %>
      <%= f.text_field :name, class: "form-control" %>
      
      <br />
      
      <br />
      <%= f.label :street, I18n.t(:path_name, scope: 'custom.view.field') %>
      <%= f.text_field :street, class: "form-control" %>
      
      <br />
      <%= f.label :city, I18n.t(:city, scope: 'custom.form') %>
      <%= f.text_field :city, class: "form-control" %>
      
      <br />
      <%= f.label :country, I18n.t(:country, scope: 'custom.form') %>
      <%= f.text_field :country, class: "form-control" %>
      
      <div class="actions">
        <br />
        <%= f.submit I18n.t(from=="new" ? :save : :change, scope: 'custom.verb'), class: "btn btn-lg btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
