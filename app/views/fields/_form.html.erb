<div class="row">
  <div class="col-sm-6 col-md-6 col-lg-offset-3">
    <%= form_for(@field) do |f| %>

      <!-- field_error_messages! -->
      <%= render partial: 'layouts/errors', locals: { object: @field } %>

      <div class="field">
        <br />
        <%= f.label :latitude %>
        <%= f.text_field :latitude %>
      </div>
      <div class="field">
        <br />
        <%= f.label :longitude %>
        <%= f.text_field :longitude %>
      </div>
      <div class="field">
        <br />
        <%= f.label :name, I18n.t(:give_name, scope: 'custom.view.field') %>
        <%= f.text_field :name %>
      </div>
      
      <br />
      
      <div class="field">
        <br />
        <%= f.label :street, I18n.t(:path_name, scope: 'custom.view.field') %>
        <%= f.text_field :street %>
      </div>
      <div class="field">
        <br />
        <%= f.label :city, I18n.t(:city, scope: 'custom.form') %>
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <br />
        <%= f.label :country, I18n.t(:country, scope: 'custom.form') %>
        <%= f.text_field :country %>
      </div>

      <div class="actions">
        <br />
        <% if from == "new" %>
          <%= f.submit I18n.t(:save, scope: 'custom.verb'), class: "btn btn-lg btn-primary" %>
        <% elsif from == "edit" %>
          <%= f.submit I18n.t(:change, scope: 'custom.verb'), class: "btn btn-lg btn-primary" %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
