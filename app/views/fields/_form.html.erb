<div class="row">
  <div class="span6 offset3">
    <%= form_for(@field) do |f| %>

      <!-- field_error_messages! -->
      <%= render "fields/errors" %>

      <div class="field">
        <br />
        <%= f.label :street, "Nom de la voie" %>
        <%= f.text_field :street %>
      </div>
      <div class="field">
        <br />
        <%= f.label :city, "Ville" %>
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <br />
        <%= f.label :country, "Pays" %>
        <%= f.text_field :country %>
      </div>
      <br />

      <i>Si vous n'avez pas d'adresse, saisissez les coordonnées Lat/Long</i>
      
      <div class="field">
        <br />
        <%= f.label :latitude %><br />
        <%= f.text_field :latitude %>
      </div>
      <div class="field">
        <br />
        <%= f.label :longitude %><br />
        <%= f.text_field :longitude %>
      </div>
      <div class="field">
        <br />
        <%= f.label :name, "Donnez un nom à ce field" %><br />
        <%= f.text_field :name %>
      </div>

      <div class="actions">
        <br />
        <% if from == "new" %>
          <%= f.submit "Enregistrer", class: "btn btn-large btn-primary" %>
        <% elsif from == "edit" %>
          <%= f.submit "Changer", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>