<% if @field.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <strong><%= pluralize(@field.errors.count, "erreur") %> :</strong>
      <ul>
        <% @field.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>