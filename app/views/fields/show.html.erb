<% provide(:title, "#{@field.gmaps4rails_address()}") %>

<div class="row">
  <div class="span6 offset1">
    <p>
      <strong><%= @field.print_field(@field) %></strong>
      <br />
      Lat: <%= @field.latitude %>
      <br />
      Lon: <%= @field.longitude %>
    </p>

    <%= gmaps({
      "map_options" => { "auto_zoom" => false, "zoom" => 15 },
      "markers"     => { "data" => @json }
    }) %>

  </div>
</div>
