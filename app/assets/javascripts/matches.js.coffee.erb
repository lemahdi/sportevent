$(document).on 'ready page:load', ->
	$("#match_date").datetimepicker({
    language: 'fr'
    pickTime: false
  }) if $("#match_date").length > 0

  $("#match_time").datetimepicker({
    language: 'fr'
    pickDate: false
  }) if $("#match_time").length > 0

  $("#groupIdSelect").on 'change', ->
  	$("#groupIdHiddenField").val($("#groupIdSelect").val())

  $("#sendMatchInvitToGroupButton").on 'click', ->
    if $("#groupIdHiddenField").val() == "0"
      alert "<%= I18n.t(:where_is_group, scope: 'custom.controller.contact') %>"
      return false

    if $.trim($("#matchInvitTextArea").val()).length == 0
      alert "<%= I18n.t(:write_message, scope: 'custom.controller.contact') %>"
      return false
